@page "/forgotpasswordemail/{email}"

@layout RegisterLayout

<div class="message-container">
    <div class="message">
        <span>An email with instructions on resetting your password has been sent to your email address (</span>
        <span class="message-email">@email</span>
        <span>). Please follow the link in the instructions to reset your password.</span>
    </div>
    <button class="return-button" @onclick=Return>Return to home page</button>
</div>

@code {
    [Parameter]
    public Guid? userid
    {
        get; set;
    }

    [Parameter]
    public string email
    {
        get; set;
    }

    private void Return()
    {
        NavigationManager.NavigateTo("/");
    }
}

